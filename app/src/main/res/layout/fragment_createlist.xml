<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <EditText
                android:id="@+id/userInputTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Title"
                android:inputType="none"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorGrey" />

            <EditText
                android:id="@+id/dividingCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userInputTitle"
                android:layout_marginTop="35dp"
                android:ems="10"
                android:hint="Enter a dividing word/character"
                android:inputType="none"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorGrey" />

            <EditText
                android:id="@+id/userInputRepresentatives"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dividingCharacter"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="The representatives"
                android:inputType="textMultiLine"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorGrey" />

            <TextView
                android:id="@+id/textUnderUserInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userInputRepresentatives"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/create_fragment_text"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />


            <Switch
                android:id="@+id/autoImportSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textUnderUserInput"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="35dp"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:switchPadding="5dp"
                android:text="@string/autoRadDruhSwitch"
                android:textColor="@color/colorWhite" />

            <Spinner
                android:id="@+id/languageSpinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="54dp"
                android:layout_marginEnd="17dp"
                android:spinnerMode="dropdown"
                android:prompt="@string/language_spinner_prompt" />

            <Button
                android:id="@+id/createButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/autoImportSwitch"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_button"
                android:text="@string/create_button" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/createButton"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:text="@string/save_button" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/createButton"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_toStartOf="@+id/saveButton"
                android:layout_toEndOf="@+id/createButton" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createButton"
                android:layout_marginTop="10dp">

            </androidx.recyclerview.widget.RecyclerView>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>